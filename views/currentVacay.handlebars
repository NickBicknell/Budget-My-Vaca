<!-- Modal -->
<div class="modal fade" id='myModal' tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">New Activity</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class='modal-body'>
                <form class="form new-activity-form">
                    <div class='form-group col-8 mb-2'>
                        <label>Activity name</label>
                        <input type='text' class='form-control' id='activity-name'  />
                    </div>
                    <div class='form-group col-8 mb-2'>
                        <label>What day is the activity on?</label>
                        <input type='text' class='form-control' id='activity-day'  />
                    </div>
                    <div class='form-group col-8 mb-2'>
                        <label>What time is your new acitivty?</label>
                        <input type='text' class='form-control' id='activity-time'  />
                    </div>
                    <div class='form-group col-8 mb-2'>
                        <label>What is the cost?</label>
                        <input type='number' class='form-control' id='activity-cost'  />
                    </div>
                    <input type="hidden" id="trip_id" value="{{id}}" />
                    <button type='submit' data-bs-dismiss='modal' class='btn btn-primary btn-lg'>Submit</button>
                </form>
            </div>
            {{!-- <div class='modal-footer'>
                <button type='button' class='btn btn-secondary' data-dismiss='modal'>Close</button>
                <button type='submit' class='btn save-btn btn-primary'>Save changes</button>
            </div> --}}
        </div>
    </div>
</div>

<div class='row mb-5'>
