<div class='row'>
  <div class='col-4 d-flex justify-content-center'>
    <h2 class='font-monospace display-6'>Welcome, {{name}}!</h2>
  </div>
  <div class="col-2"></div>
  <div class='d-flex col-6 justify-content-center'>
    <h2 class='font-monospace display-6'>Previous Vacays</h2>
  </div>
</div>
<div class='row'>
  <div class='col-4 d-flex flex-column align-items-center'>
    <a class='btn btn-primary btn-lg m-2 text-white link-underline-primary'
        id='new-vacay-btn' href='/newVacay'>New Vacay</a>
  </div>
  <div class="col-2"></div>
  <div class='d-flex flex-column-reverse col-6 justify-content-center'>
    {{#if trips.length}}
    {{#each trips as |trip|}}
    {{!-- <button type='button' class='btn btn-primary btn-lg my-2'><a class='text-white link-underline-primary'
        href='/trip/{{trip.id}}'>{{trip.name}}</a></button> --}}
        <a class='btn btn-primary btn-lg my-2 text-white link-underline-primary'
        href='/trip/{{trip.id}}'>{{trip.name}}</a>
    {{/each}}
    {{/if}}
  </div>
</div>

<script src='./js/profile.js'></script>