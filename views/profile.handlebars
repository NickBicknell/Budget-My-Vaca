<div class='row'>
  <div class='d-flex col-4 justify-content-center'>
    <h2 class='font-monospace display-6'>Welcome, {{name}}!</h2>
  </div>
  <div class='d-flex col-8 justify-content-center'>
    <h2 class='font-monospace display-6'>Previous Vacays</h2>
  </div>
</div>
<div class='row'>
  <div class='d-flex col-4 justify-content-center'>
    <button type='button' class='btn btn-primary btn-lg m-2'><a class='text-white link-underline-primary'
        id='new-vacay-btn' href='/newVacay'>New Vacay</a></button>
  </div>
  <div class='d-flex flex-column col-8 justify-content-center'>
    {{#if trip.length}}
    {{#each trip as |trip|}}
    <button type='button' class='btn btn-primary btn-lg m-2'><a class='text-white link-underline-primary'
        href='/trip/{{trip.id}}'>{{trip.name}}</a></button>
    {{/each}}
    {{/if}}
  </div>
</div>

